  "author": "AlexSav94 <aleksoider@gmail.com>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@babel/runtime": "7.10.5",
    "@storybook/addon-actions": "6.0.0-rc.13",
    "@storybook/addon-knobs": "6.0.0-rc.13",
    "@storybook/addon-a11y": "5.3.19",
    "@storybook/react": "6.0.0-rc.13",
    "@types/jest": "26.0.5",
    "@types/shelljs": "0.8.8",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "@testing-library/react": "^10.4.7",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "bundlesize": "0.18.0",
    "concurrently": "5.2.0",
    "cross-env": "7.0.2",
    "eslint": "7.5.0",
    "eslint-plugin-jest-dom": "3.1.4",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.8",
    "eslint-plugin-testing-library": "3.3.2",
    "esm": "3.2.25",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "storybook-addon-performance": "0.11.0",
    "ts-jest": "26.1.2",
    "typescript": "3.9.7",
    "commitlint": "9.1.0",
    "@commitlint/config-conventional": "^9.1.1",
    "@storybook/storybook-deployer": "2.8.6"
  },
  "scripts": {
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "build": "lerna run build --no-private --stream",
    "clean": "lerna clean --yes && rimraf node_modules",
    "start": "yarn build && yarn storybook",
    "start:all": "yarn build && concurrently \"yarn docs develop\"  \"yarn storybook\" ",
    "test": "lerna run test --no-private --stream",
    "test:cov": "lerna run test:cov",
    "lint": "lerna run lint --no-private --stream",
    "storybook": "start-storybook -p 6006",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "bundlesize": "bundlesize -c bundlesize.config.json",
    "build:storybook": "build-storybook",
    "version:release": "lerna version --conventional-commits --conventional-graduate -y",
    "version:pre-release": "lerna version --conventional-commits --conventional-prerelease --preid=rc -y",
    "version:pre-release:alpha": "lerna version --conventional-commits --conventional-prerelease --preid=alpha",
    "version:pre-release:beta": "lerna version --conventional-commits --conventional-prerelease --preid=beta",
    "publish:release": "lerna publish from-package --npm-tag latest -y",
    "publish:pre-release": "lerna publish from-package --npm-tag next -y",
    "publish:pre-release:alpha": "lerna publish from-package --npm-tag alpha",
    "publish:pre-release:beta": "lerna publish from-package --npm-tag beta",
    "deploy-storybook": "storybook-to-ghpages",
    "deploy-storybook:ci": "storybook-to-ghpages -- --ci"
  }
}
