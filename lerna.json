{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["**/stories/**", "**/tests/**", "**/*.md"],
      "allowBranch": "master"
    },
    "version": {
      "conventionalCommits": true,
      "ignoreChanges": ["**/stories/**", "**/tests/**", "**/*.md"],
      "allowBranch": ["master", "release/*", "hotfix/*", "develop"]
    }
  }
}
